<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".specificAsteroid.SpecificAsteroidFragment">

    <data>
        <variable
            name="viewModel"
            type="com.klekchyan.asteroidsnews.specificAsteroid.SpecificAsteroidViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/specific_asteroid_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{viewModel.asteroid.name}"
            android:textSize="30sp" />
    </FrameLayout>
</layout>
