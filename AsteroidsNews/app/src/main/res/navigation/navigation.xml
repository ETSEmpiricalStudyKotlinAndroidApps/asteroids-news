<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.klekchyan.asteroidsnews.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_specificAsteroidFragment"
            app:destination="@id/specificAsteroidFragment" />
        <action
            android:id="@+id/action_listFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/specificAsteroidFragment"
        android:name="com.klekchyan.asteroidsnews.SpecificAsteroidFragment"
        android:label="fragment_specific_asteroid"
        tools:layout="@layout/fragment_specific_asteroid" >
        <action
            android:id="@+id/action_specificAsteroidFragment_to_listFragment"
            app:popUpTo="@id/listFragment" />
        <argument
            android:name="asteroid"
            app:argType="com.klekchyan.asteroidsnews.model.Asteroid" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.klekchyan.asteroidsnews.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_listFragment"
            app:popUpTo="@id/listFragment" />
    </fragment>
</navigation>